{
  "name": "project-zeus",
  "version": "0.1.0",
  "description": "A modern rsync task manager built with TypeScript.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "docker:build": "docker build -t project-zeus .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data -v ~/.ssh:/root/.ssh --name project-zeus-container project-zeus",
    "knip": "knip",
    "test": "jest"
  },
  "keywords": [
    "rsync",
    "backup",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "node-cron": "^4.0.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.8.3",
    "knip": "^5.25.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "@types/jest": "^29.5.12"
  }
}
